<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/footer_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/footer_height"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@id/default_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/button_extra_margin"
        android:text="@string/default_string" />

    <TextView
        android:id="@id/extra_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_toStartOf="@id/cancel_btn"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/button_padding"
        android:textColor="@color/primaryForeground"
        android:textSize="@dimen/button_text_size"
        android:visibility="gone" />

    <Button
        android:id="@id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_toStartOf="@id/ok_btn"
        android:text="@android:string/cancel" />

    <Button
        android:id="@id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/button_extra_margin"
        android:text="@android:string/ok" />
</RelativeLayout>