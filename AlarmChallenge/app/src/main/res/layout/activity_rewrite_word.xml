<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_math"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iclone.alarmchallenge.RewriteWord">

    <RelativeLayout
        android:paddingTop="30dp"
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#31608f">
        <TextClock
            android:id="@+id/time"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textColor="#FFF"
            android:format12Hour="HH:mm"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/rewrite_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:text="Rewrite: DQA"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_below="@+id/time"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:id="@+id/answer_text"
            android:layout_below="@+id/rewrite_text"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:gravity="center"
        android:paddingTop="30dp">
        <TableLayout
            android:id="@+id/listnumber"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/btn1"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn2"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />
                <Button
                    android:id="@+id/btn3"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn4"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn5"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />


            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn6"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn7"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn8"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn9"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/btn0"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />


            </TableRow>


        </TableLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/listnumber"
            android:layout_alignBottom="@+id/listnumber"
            android:layout_alignParentTop="true">

            <ImageButton
                android:layout_width="60dp"
                android:background="@drawable/customlayout"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textColor="#1b1b1b"
                android:id="@+id/delete_button"
                android:src="@drawable/ic_backspace_black_24dp"/>
        </FrameLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/sleep_button"
        android:background="@drawable/customlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/relativelayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
