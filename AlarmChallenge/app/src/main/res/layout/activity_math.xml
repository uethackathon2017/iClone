<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="io.github.carlorodriguez.alarmon.MathActivity">

    <RelativeLayout
        android:paddingTop="30dp"
        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#31608f"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextClock
            android:id="@+id/time"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textColor="#FFF"
            android:format12Hour="HH:mm"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/math_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="6x2"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_below="@+id/time"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:id="@+id/result_text"
            android:layout_below="@+id/math_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1/3"
            android:id="@+id/tv_math_process"
            android:textColor="#ffffff"
            android:layout_alignBaseline="@+id/math_text"
            android:layout_alignBottom="@+id/math_text"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:gravity="center"
        android:paddingTop="30dp">
        <TableLayout
            android:id="@+id/listnumber"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/bt1"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt2"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />
                <Button
                    android:id="@+id/bt3"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt4"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt5"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />


            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/bt6"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt7"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt8"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt9"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:id="@+id/bt0"
                    android:background="@drawable/customlayout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />


            </TableRow>


        </TableLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/listnumber"
            android:layout_alignBottom="@+id/listnumber"
            android:layout_alignParentTop="true">

            <ImageButton
                android:layout_width="60dp"
                android:background="@drawable/customlayout"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textColor="#1b1b1b"
                android:id="@+id/math_delete_button"
                android:src="@drawable/ic_backspace_black_24dp"/>
        </FrameLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/sleep_button_math"
        android:background="@drawable/customlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/relativelayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
