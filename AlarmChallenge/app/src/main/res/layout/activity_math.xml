<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_math"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iclone.alarmchallenge.MathActivity">

    <RelativeLayout
        android:paddingTop="30dp"
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#31608f">
        <TextClock
            android:id="@+id/time"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textColor="#FFF"
            android:format24Hour="MMM dd, yyyy k:mm"
            android:format12Hour="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/ketqua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/phepTinh"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="0"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/phepTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="(12 + 5) x 3"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_below="@+id/time"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:gravity="center"
        android:paddingTop="30dp">
        <TableLayout
            android:id="@+id/listnumber"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="1"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="2"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="3"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="4"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="5"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b"
                    android:id="@+id/button2" />


            </TableRow>

            <TableRow>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="6"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="7"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="8"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="9"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customlayout"
                    android:text="0"
                    android:textSize="25sp"
                    android:layout_margin="2dp"
                    android:textColor="#1b1b1b" />


            </TableRow>


        </TableLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/listnumber"
            android:layout_alignBottom="@+id/listnumber"
            android:layout_alignParentTop="true">

            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/customlayout"
                android:text="1"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#1b1b1b"
                android:id="@+id/button" />
        </FrameLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/relativelayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/customlayout" />

</RelativeLayout>
